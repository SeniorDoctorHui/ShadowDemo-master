<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.svn.huige.com.shadowdemo.ShadowActivity">
    <test.svn.huige.com.shadowdemo.ShadowContainer
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:containerCornerRadius="5dp"
        app:containerDeltaLength="10dp"
        app:containerShadowColor="#20ff0000"
        app:containerShadowRadius="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Hello World!"
            />
    </test.svn.huige.com.shadowdemo.ShadowContainer>

</android.support.constraint.ConstraintLayout>
